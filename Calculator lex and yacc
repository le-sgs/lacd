//lex

%{
	#include<stdio.h>
	#include "y.tab.h"
	extern int yylval;
%}
%%
[0-9]+ {
	yylval=atoi(yytext);
	return NUMBER;	
	}
[ ] ;
[\t] ;
[\n] return 0;
. return yytext[0];
%%
int yywrap()
{
	return 1;
}

//yacc
%{
	#include<stdio.h>
%}
%left '+' '-'
%left '*' '/' '%'
%left '(' ')'
%token NUMBER
%%
Arith:E{printf("Result=%d",$$);
	return 0;}
E:	E'+'E {$$=$1+$3;}|
	E'-'E {$$=$1-$3;}|
	E''E {$$=$1$3;}|
	E'/'E {$$=$1/$3;}|
	E'%'E {$$=$1%$3;}|
	'('E')'{$$=$2;}	|
	NUMBER
%%
int yyerror()
{
	printf("Invalid Expression");
}
int main()
{
	yyparse();
	return 0;
}
